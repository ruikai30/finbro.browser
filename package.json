{
  "name": "finbro-browser",
  "version": "0.0.1",
  "description": "AI-native browser for finbro.me",
  "main": "dist/main/main.js",
  "author": "Finbro",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.main.json && vite build",
    "dev": "npm run build && electron .",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "electron-store": "^8.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^7.2.2"
  },
  "build": {
    "appId": "com.finbro.browser",
    "productName": "finbro.me",
    "files": [
      "dist/**/*",
      "build/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
